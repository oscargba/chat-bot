{
  "intents": [
    {
      "tag": "ask_cloning_help",
      "patterns": [
        "Can I get help cloning a strategy?",
        "I need help cloning a strategy",
        "Help me clone a strategy"
      ],
      "responses": [
        "What is the strategy id of the strategy you want to clone?"
      ],
      "context_set": "awaiting_strategy_id"
    },


    {
      "tag": "provide_strategy_id",
      "patterns": [
        "ID is ([0-9]+)",
        "The strategy id is ([0-9]+)",
        "Strategy id is ([0-9]+)",
        "It is ([0-9]+)",
        "The ID is ([0-9]+)",
        "Strategy ID ([0-9]+)",
        "([0-9]+)"
      ],
      "responses": [
        "What do you want to name this strategy?"
      ],
      "context_filter": "awaiting_strategy_id",
      "context_set": "awaiting_strategy_name",
      "action": "extract_strategy_id"
    },


    {
      "tag": "provide_strategy_name",
      "patterns": [
        "Name is (.+)",
        "The name is (.+)",
        "I want to name it: (.+)",
        "I want to name it (.+)",
        "Let's name it (.+)",
        "Name it (.+)",
        "Call it (.+)"
      ],
      "responses": [
        "I am cloning the strategy, please wait a moment..."
      ],
      "context_filter": "awaiting_strategy_name",
      "context_set": "cloning_strategy",
      "action": "clone_strategy_api_call"
    },


    {
      "tag": "clone_success",
      "patterns": [
        "Success"
      ],
      "responses": [
        "I have successfully cloned your strategy. The new strategy ID is {new_strategy_id}.",
        "Redirecting you to your new strategy..."
      ],
      "context_filter": "cloning_strategy",
      "context_set": "ask_cloning_help",
      "action": "redirect_to_strategy"
    }

    
  ]
}
